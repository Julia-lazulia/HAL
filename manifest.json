{
    "manifest_version": 2,
    "name": "Hanze AutoLogin",
    "description": "Automate logins into services of the Hanzehogeschool.",
    "author": "Auke Willem Oosterhoff <awoosterhoff@gmail.com>", // See for more authors AUTHORS.txt
    "version": "0.1.1",

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": 
    [
        {
            "matches": ["https://*.hanze.nl/*"],
            "js": ["assets/js/jquery.js", "hal.js"],
            "run_at": "document_idle"
        }
    ],

    "icons": {
        "128" : "assets/img/icon_128.png",
        "48" : "assets/img/icon_48.png",
        "16" : "assets/img/icon_16.png"
    },

    "permissions": [
        // to save username and password
        "storage"    
    ],

    "options_page": "options.html",

     "web_accessible_resources": ["options.html"]
}
